<%= form_with url: search_path, local: true do |form| %>
  <%= form.label :search, 'Search Movie by Title:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>

<%= link_to "Top Movies", trending_path %>

<% if @movies %>
  <div><h2>Movies</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Overview</th>
          <th>Poster</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= link_to movie.title, user_movie_path(@user.id, movie.id) %></td>
            <td><%= movie.overview %></td>
            <td><img src="<%= @url+movie.image_url %>" width="150px"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>