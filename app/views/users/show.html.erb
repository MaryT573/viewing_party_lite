<h1><%= @user.username %>'s Dashboard</h1>

<%= link_to "Discover Movies", discover_path %>

  <div><h2>Invited Events</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Duration</th>
          <th>Poster</th>
        </tr>
      </thead>
      <tbody>
        <% @invited_events.each do |event| %>
          <tr>
            <td><%= link_to event.movie.title, user_movie_path(@user.id, event.movie.id) %></td>
            <td><%= event.movie.start_date %></td>
            <td><%= event.movie.run_time %> min</td>
            <td><img src="<%= @url+event.movie.image_url %>" width="150px"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div><h2>Created Events</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Duration</th>
          <th>Poster</th>
        </tr>
      </thead>
      <tbody>
        <% @created_events.each do |event| %>
          <tr>
            <td><%= link_to event.movie.title, user_movie_path(@user.id, event.movie.id) %></td>
            <td><%= event.movie.start_date %></td>
            <td><%= event.movie.run_time %> min</td>
            <td><img src="<%= @url+event.movie.image_url %>" width="150px"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

